<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_M"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/titulo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Duelos"
            android:textAlignment="center"
            android:textSize="25dp"
            android:fontFamily="@font/saouibold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/pesquisa_jogador"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Busca"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo3"/>

        <Button
            android:id="@+id/novo_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo"
            android:fontFamily="@font/saouibold"
            android:textSize="20dp"
            android:drawableLeft="@drawable/iconduelmais"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/titulo3"
            app:layout_constraintBottom_toTopOf="@id/pesquisa"
            app:layout_constraintRight_toRightOf="@id/pesquisa"/>

        <Button
            android:id="@+id/pesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busca"
            android:drawableLeft="@drawable/baseline_content_paste_search_24"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            android:layout_marginLeft="10dp"
            app:layout_constraintBaseline_toBaselineOf="@id/pesquisa_jogador"
            app:layout_constraintLeft_toRightOf="@id/pesquisa_jogador"/>

        <ListView
            android:id="@+id/lista_duelos"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            tools:layout_editor_absoluteX="75dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="148dp"
            app:layout_constraintTop_toBottomOf="@id/pesquisa_jogador"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>