<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_V"
    tools:context=".SevenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/id_duelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID do duelo"
            android:textAlignment="center"
            android:textColor="@color/letras"
            android:textSize="25dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/data_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qunado foi"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="298dp"
            tools:layout_editor_absoluteY="39dp"
            android:layout_marginTop="30dp"
            app:layout_constraintRight_toLeftOf="@id/tempo_duelo"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tipo_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo do Duelo"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="49dp"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@id/id_duelo"/>

        <TextView
            android:id="@+id/tempo_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duraçao"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="294dp"
            tools:layout_editor_absoluteY="121dp"
            app:layout_constraintLeft_toRightOf="@id/data_duelo"
            app:layout_constraintBaseline_toBaselineOf="@id/data_duelo"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/image_P1"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="232dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="75dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_duelo"/>

        <ImageView
            android:id="@+id/image_P2"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:textColor="@color/letras"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="255dp"
            tools:layout_editor_absoluteY="227dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_P1"/>

        <TextView
            android:id="@+id/player1_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Player 1"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="206dp"
            app:layout_constraintLeft_toLeftOf="@id/image_P1"
            app:layout_constraintBottom_toTopOf="@id/image_P1"/>

        <TextView
            android:id="@+id/player2_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Player 2"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="308dp"
            tools:layout_editor_absoluteY="210dp"
            app:layout_constraintLeft_toLeftOf="@id/image_P2"
            app:layout_constraintBottom_toTopOf="@id/image_P2"/>

        <TextView
            android:id="@+id/guilda1_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guilda P1"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="372dp"
            app:layout_constraintLeft_toLeftOf="@id/image_P1"
            app:layout_constraintTop_toBottomOf="@id/image_P1"/>

        <TextView
            android:id="@+id/guilda2_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guilda P2"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="312dp"
            tools:layout_editor_absoluteY="376dp"
            app:layout_constraintLeft_toLeftOf="@id/image_P2"
            app:layout_constraintTop_toBottomOf="@id/image_P2"/>

        <TextView
            android:id="@+id/vs_duelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textSize="50dp"
            android:textColor="@color/letras"
            android:textAlignment="center"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="297dp"
            app:layout_constraintRight_toLeftOf="@id/image_P2"
            app:layout_constraintLeft_toRightOf="@id/image_P1"
            app:layout_constraintTop_toTopOf="@id/image_P1"
            app:layout_constraintBottom_toBottomOf="@id/image_P2"/>

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="453dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            app:layout_constraintTop_toBottomOf="@id/placar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="42dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="@id/tipo_duelo"
            app:layout_constraintBottom_toBottomOf="@id/tipo_duelo"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/placar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pontuaçao"
            android:textColor="@color/letras"
            android:textSize="20dp"
            android:fontFamily="@font/saouibold"
            tools:layout_editor_absoluteX="91dp"
            android:layout_marginTop="50dp"
            tools:layout_editor_absoluteY="541dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guilda1_duelo"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>